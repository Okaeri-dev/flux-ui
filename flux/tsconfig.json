/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@flux-assets/*": ["assets/*"],
      "@flux-services/*": ["app/services/*"],
      "@flux-components/*": ["app/components/*"],
      "@flux-models/*": ["app/models/*"],
      "@flux-store/*": ["app/store/*"],
      "@flux-resolvers/*": ["app/resolvers/*"],
      "@flux-pipes/*": ["app/pipes/*"],
      "@flux-guards/*": ["app/guards/*"],
      "flux-utilities": ["../../flux-utilities/src/public-api.ts"]
    },
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "useDefineForClassFields": false,
    "module": "ES2022",
    "lib": ["ES2022", "dom"],
    "types": ["node"]
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "node_modules/primeng/**/*.d.ts",
    "node_modules/@primeng/themes/**/*.d.ts",
    "../flux-utilities/**/*"
  ],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
}
